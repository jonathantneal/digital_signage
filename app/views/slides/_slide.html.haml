%li[slide]
  .slide_status= "#{slide_status(slide)}" + (slide.showing? ? " - #{slide.delay}s" : "")

  =link_to slide do
    .preview_wrapper
      
      %div{:class=>"thumbnail #{slide_type(slide)}", :style=>"background-color:##{slide.color};"}
        -if slide.image?
          =image_tag slide_file_url(slide, :preview), :alt=>"#{slide.title} thumbnail"
        -elsif slide.swf?
          =image_tag "flash.jpg", :alt=>"#{slide.title} flash player"
        -elsif slide.video?
          =image_tag "video_thumbnail.jpg", :alt=>"#{slide.title} video"

      .title_bar
        %h4=slide.title

  / %dl
  /   %dt.title Title
  /   %dd.title=link_to(slide.title, slide)
  /   %dt.thumbnail Preview
  /   %dd.thumbnail=render(:partial=>'shared/thumbnail', :locals=>{:slide=>slide})
  /   %dt.status Status
  /   %dd.status{:class=>slide_status(slide)}=slide_status(slide)
  /   %dt.department Department
  /   %dd.department=link_to(slide.department.title, slide.department)
  /   %dt.actions Actions
  /   %dd.actions=action_links(slide, :exclude=>:show, :remote=>:destroy)