#top-right-link
  -if permitted_to?(:create, :slides)
    =link_to new_slide_path, :class=>"google_button" do
      %i.icon-plus
      Create New Slide

%h1 Slides
=form_for(@search, :html=>{:class=>'filter'}) do |f|
  %fieldset
    %legend Filter Slides
    
    #slide_options
      #thumb_size_slider

    %span.param
      =f.label :signs_id_eq, 'Sign'
      =f.collection_select :signs_id_eq, Sign.with_permissions_to(:index), :id, :title, {:include_blank=>true}
    %span.param
      =f.label :department_id_eq, 'Department'
      =f.collection_select :department_id_eq, Department.with_permissions_to(:show), :id, :title, {:include_blank=>true}
    %span.param
      =f.label :published_eq, 'Published'
      =f.select :published_eq, [['Published', 1], ['Unpublished', 0]], {:include_blank=>true}
    .buttons=f.submit 'Filter'


.search_results
  =render('slides')
