%h1 Slides on the #{link_to(@sign.title, sign_path(@sign))} Sign

#slide_options
  =link_to('Show Slide', "#", :id=>"show-slide-button", :class=>"google_button single_slide_button")
  =link_to('Edit Slot', "#", :id=>"edit-slide-button", :class=>"google_button single_slide_button")
  =link_to('Remove', "#", :id=>"remove-slide-button", :class=>"google_button multi_slide_button")
  #thumb_size_slider

%ol.slots
  -@slots.each do |slot|
    %li{:id=>"slot_#{slot.id}", :class=>"slot", 'data-edit-url'=>url_for([:edit, @sign, slot]), 'data-show-url'=>slide_url(slot.slide)}
      
      .slide_status= "#{slide_status(slot.slide)}" + (slot.slide.showing? ? " - #{slot.custom_delay}s" : "")

      .preview_wrapper
        =render(:partial=>'shared/thumbnail', :locals=>{:slide=>slot.slide, :no_swf=>true})
        .title_bar
          %h4=slot.slide.title
        
-content_for :aside do
  =render 'index_aside'