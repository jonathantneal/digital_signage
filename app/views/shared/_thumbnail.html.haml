- no_swf ||= false

%div{:class=>"thumbnail #{slide_type(slide)}", :style=>"background-color:##{slide.color};"}
  -if slide.image?
    %img{:src=>slide_file_url(slide, :preview), :alt=>"#{slide.title} thumbnail"}
  -if slide.swf?
    -if no_swf
      %img{:src=>"#{request.script_name}/images/flash.jpg", :alt=>"#{slide.title} video"}
    -else
      .swf
        %object{:type=>'application/x-shockwave-flash', :data=>slide_url(slide), :width=>336, :height=>189}
          %param{:name=>'movie', :value=>slide_url(slide)}
  -if slide.video?
    %img{:src=>"#{request.script_name}/images/video_thumbnail.jpg", :alt=>"#{slide.title} video"}