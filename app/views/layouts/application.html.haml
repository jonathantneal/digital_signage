!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= h(yield(:title) || "Sign Manager")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %link{"rel"=>"icon", "type"=>"image/png", "href"=>"http://media1.biola.edu/biola/img/biola-icon.png"}
    = stylesheet_link_tag 'main'
    = stylesheet_link_tag 'application'
    = controller_stylesheet_link_tag
    = javascript_include_tag :defaults
    = controller_javascript_include_tag
    = yield(:head)
  %body
    #wrapperHeader
      #header
        #brandingBiola
          %a#logo(href="http://www.biola.edu") Biola University
        %ul#navMain
          %li
            %a(href="http://www.biola.edu/about")About
          %li
            %a(href="http://www.biola.edu/academics")Academics
          %li
            %a(href="http://www.biola.edu/admissions")Admissions
          %li
            %a(href="http://www.biola.edu/athletics")Athletics
          %li
            %a(href="http://www.biola.edu/news")News &amp; Events
          %li
            %a(href="http://www.biola.edu/resources")Resources
          %li
            %a(href="http://www.biola.edu/offices")Offices
          %li
            %a(href="http://www.biola.edu/find/")Search
    #wrapperTitle
      #branding
        #siteTitle
          = link_to "THI Student Evaluations", root_path
      - if !current_user.nil?
        #logout
          =link_to "Logout", logout_path
        #profile
          #profile_photo
            %img{:src => "https://wisdom2.biola.edu/portal_graphics/photos/#{current_user.username}.jpg", :alt => "profile photo"}
          #profile_name 
            = link_to "#{current_user.first_name} #{current_user.last_name}", current_user
        %ul#navExtra
          %li
            = link_to "Feedback", "feedback_path", :id => "nav_feedback"
          %li
            = link_to "Documentation", "documentation_path", :id => "nav_doc"
    #messages
      = render :partial => 'layouts/messages'
    #wrapperContent
      #content
        = tabnav :main
        #contentMain
          = yield
        #contentExtra
          = yield :extra || ""
    #wrapperFooter
      #footer
      %p#legal
        &copy;2009 Biola University
        %a(href="terms-of-service")Terms of Service
        %a#ithelpdesk(href="http://offices.biola.edu/it/")IT Helpdesk
