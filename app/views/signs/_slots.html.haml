-@slots.each do |slot|
  %li[slot]

    .slide_status
      = "#{slide_status(slot.slide)}" + (slot.slide.showing? ? " - #{slot.custom_delay}s" : "")

    = link_to 'X', sign_slot_url(@sign, slot), method: :delete, class: 'remove_slot_link', title: 'Remove this slide from sign', remote: true

    = link_to slot.slide do
      .preview_wrapper
        -unless slot.slide.published?
          .corner-banner
            unpublished
        =render "shared/thumbnail", slide: slot.slide

        .title_bar
          %h4=slot.slide.title